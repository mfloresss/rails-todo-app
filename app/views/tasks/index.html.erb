<h1> Tasks </h1>

<div style="display: flex; flex-direction: column; gap: 20px;" >
    <% @tasks.each do |task| %>
        <div>
            <p>Title: <%= task.title %></p>
            <p>Body: <%= task.body %></p>
            <%= link_to "See task", task %>
        </div>
    <% end %>
</div>

<%= link_to "New task", new_task_path %>
<%= link_to "Delete all task", "/tasks", method: :delete %>