<%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% task.errors.full_messages_for(:title).each do |message| %>
        <%= message %>
    <% end %>

    <%= f.label :body %>
    <%= f.text_area :body %>
    <% task.errors.full_messages_for(:body).each do |message| %>
        <%= message %>
    <% end %>

    <%= f.submit %>
<% end %>