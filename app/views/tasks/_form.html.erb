<style>
  .field-container {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  form {
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  .error_text {
      color: red;
  }

  input.create-task-btn  {
    background: black;
    padding: 10px;
    border-radius: 20px;
    text-align: center;
    color: white;
  }
</style>

<%= form_with model: task do |f| %>
  <div class="field-container">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% task.errors.full_messages_for(:title).each do |message| %>
      <p class="error_text"><%= message %></p>
    <% end %>
  </div>
  <div class="field-container">
    <%= f.label :body %>
    <%= f.text_area :body %>
    <% task.errors.full_messages_for(:body).each do |message| %>
      <p class="error_text"><%= message %></p>
    <% end %>
  </div>
    <%= f.submit class: "create-task-btn" %>
<% end %>
