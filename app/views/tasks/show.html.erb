<%= stylesheet_link_tag 'tasks/show' %>
<div class="task-container">
  <div class="task-card">
    <div class="header">
      <%= link_to "Edit", edit_task_path(@task), class: "edit-task-btn" %>
      <%= link_to "X", task_path(@task), method: :delete, class: "delete-task-btn", data: { confirm: 'Are you sure of delete this task?' } %>
    </div>
    <h2><%= @task.title %></h2>
    <p><%= @task.body %></p>
  </div>
</div>
<div class="comments-container">
  <%= render "comments/form", comment: @comment %>
  <div class="comments">
    <h2 style="margin-bottom: 20px;">Comments</h2>
    <%= render @task.comments %>
  </div>
  <% if @task.status == "ongoing" %>
    <button class="done-task-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
      </svg>
    </button>
  <% end %>
</div>
<%= javascript_include_tag "tasks/show.js" %>
