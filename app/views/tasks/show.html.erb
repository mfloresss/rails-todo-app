<%= stylesheet_link_tag 'tasks/show' %>
<div class="task-container">
  <div class="task-card">
    <div class="header">
      <%= link_to "Edit", edit_team_task_path(@task), class: "edit-task-btn" %>
      <%= link_to nil, method: :delete, class: "delete-task-btn", data: { confirm: 'Are you sure of delete this task?' } do %>
        <svg
        width="16px"
        height="16px"
        viewBox="0 0 16 16"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        class="bi bi-x-lg"
        >
          <path d="M1.293 1.293a1 1 0 0 1 1.414 0L8 6.586l5.293-5.293a1 1 0 1 1 1.414 1.414L9.414 8l5.293 5.293a1 1 0 0 1-1.414 1.414L8 9.414l-5.293 5.293a1 1 0 0 1-1.414-1.414L6.586 8 1.293 2.707a1 1 0 0 1 0-1.414z" />
        </svg>
      <% end %>
    </div>
    <h2><%= @task.title %></h2>
    <p><%= @task.body %></p>
  </div>
</div>
<div class="comments-container">
  <%= render "comments/form", comment: @comment %>
  <div class="comments">
    <h2 style="margin-bottom: 20px;">Comments</h2>
    <%= render @task.comments %>
  </div>
  <div class="continer-fixed-btn">
    <%= link_to team_tasks_path(@team), class: "tasks-btn fixed-btn" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
      </svg>
    <% end %>
    <% if @task.status == "ongoing" %>
      <button class="done-task-btn fixed-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
          <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
        </svg>
      </button>
    <% end %>
  </div>
</div>
<%= javascript_include_tag "tasks/show.js" %>
