<%= form_with model: @user, method: :patch do |f| %>
  <div class="field-container">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field-container">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field-container">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field-container">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= content_tag :p, class: "error_text" do %>
      <%= flash[:notice] %>
    <% end %>
  <%= f.submit "Update", class: 'update-btn' %>
<% end %>
