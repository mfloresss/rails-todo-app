<style>
  form, .field-container {
      width: 100%;
      gap: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
  }

  input.create-comment-btn  {
    background: black;
    padding: 10px;
    border-radius: 20px;
    text-align: center;
    color: white;
  }

</style>
<%= form_with model: [ @task, @comment ] do |f| %>
  <div class="field-container">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
    <% @comment.errors.full_messages_for(:commenter).each do |message| %>
      <p class="error_text"><%= message %></p>
    <% end %>
  </div>
  <div class="field-container">
    <%= f.text_area :body %>
    <% @comment.errors.full_messages_for(:body).each do |message| %>
      <p class="error_text"><%= message %></p>
    <% end %>
  </div>
    <%= f.submit class: "create-comment-btn" %>
<% end %>
